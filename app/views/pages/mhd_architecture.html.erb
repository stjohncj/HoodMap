<div class="page-header">
  <div class="container">
    <nav class="breadcrumb">
      <%= link_to "Historic District Map", historic_district_map_path, class: "nav-link" %> 
      <span>/</span>
      <span><%= @page_title %></span>
    </nav>
  </div>
</div>

<div class="info-page-content">
  <div class="image-gallery">
    <%= image_tag "ellis-street.avif", alt: "Ellis Street", class: "gallery-image" %>
    <%= image_tag "harrison-street.avif", alt: "Harrison Street", class: "gallery-image" %>
    <%= image_tag "milwaukee-street.avif", alt: "Milwaukee Street", class: "gallery-image" %>
  </div>
  
  <div class="container">
    <h1 class="page-title"><%= @page_title %></h1>
    <div class="text-content">
      <%= simple_format(@content) %>
    </div>
    
    <div class="navigation-footer">
      <%= link_to historic_district_map_path, class: "btn btn-secondary" do %>
        <i class="fas fa-arrow-left"></i> Back to Map
      <% end %>
    </div>
  </div>
</div>

<style>
.breadcrumb {
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.9);
}

.breadcrumb .nav-link {
  color: white;
  text-decoration: underline;
}

.breadcrumb span {
  margin: 0 0.5rem;
}

.info-page-content {
  background: white;
  min-height: calc(100vh - 80px);
}

.image-gallery {
  display: flex;
  gap: 0;
  width: 100%;
  height: 300px;
  overflow: hidden;
  background: #f3f4f6;
}

.gallery-image {
  flex: 1;
  width: 33.333%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.gallery-image:hover {
  transform: scale(1.05);
}

.page-title {
  margin-top: 3rem;
  margin-bottom: 2rem;
  font-size: 2.5rem;
  font-weight: 700;
  color: #1f2937;
  text-align: center;
}

.text-content {
  max-width: 800px;
  margin: 0 auto;
  font-size: 1.1rem;
  line-height: 1.8;
  color: #374151;
}

.text-content p {
  margin-bottom: 1.5rem;
}

.navigation-footer {
  text-align: center;
  padding: 3rem 0;
  margin-top: 3rem;
  border-top: 1px solid #e5e7eb;
}

.btn i {
  margin-right: 0.5rem;
}
</style>