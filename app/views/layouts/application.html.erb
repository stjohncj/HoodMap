  <body>
    <%= yield %>

    <!-- MHD Committee Footer -->
    <footer class="site-footer">
      <div class="container">
        <%= render 'shared/members' %>
        <div style="text-align: center; margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid #e2e8f0; color: #64748b; font-size: 0.875rem;">
          Proudly developed in Kewaunee's Marquette Historic District by <a href="https://integrit.dev" target="_blank" rel="noopener noreferrer" style="color: var(--site-primary-b); text-decoration: none; font-weight: 500; font-size: 0.9375rem;" onmouseover="this.style.textDecoration='underline'; this.style.textDecorationThickness='1px'; this.style.fontWeight='700'" onmouseout="this.style.textDecoration='none'; this.style.fontWeight='500'">IntegritDev Software</a>, as a service to the community and all who visit.
        </div>
      </div>
    </footer>

    <!-- Global Image Viewer Modal -->
    <div id="imageViewerModal" class="image-viewer-modal" onclick="window.closeImageViewer()">
      <div class="image-viewer-controls">
        <button class="image-viewer-zoom" onclick="event.stopPropagation(); window.zoomImage('out')" title="Zoom Out">âˆ’</button>
        <button class="image-viewer-zoom" onclick="event.stopPropagation(); window.zoomImage('in')" title="Zoom In">+</button>
        <span class="image-viewer-close" onclick="event.stopPropagation(); window.closeImageViewer()" title="Close">&times;</span>
      </div>
      <button id="galleryNavPrev" class="gallery-nav gallery-nav-prev" onclick="event.stopPropagation(); window.navigateGallery(-1)" title="Previous Image" style="display: none;">
        <i class="fas fa-chevron-left"></i>
      </button>
      <button id="galleryNavNext" class="gallery-nav gallery-nav-next" onclick="event.stopPropagation(); window.navigateGallery(1)" title="Next Image" style="display: none;">
        <i class="fas fa-chevron-right"></i>
      </button>
      <div class="image-viewer-content" onclick="event.stopPropagation()">
        <img id="imageViewerImage" class="image-viewer-image" alt="">
        <div id="imageViewerCaption" class="image-viewer-caption"></div>
      </div>
    </div>


    <script type="module">
      // Import and initialize URL state manager globally
      import URLStateManager from 'url_state';
      if (!window.urlState) {
        window.urlState = new URLStateManager();
      } else {
        // If instance exists, refresh params to pick up current URL
        window.urlState.refreshParams();
      }
    </script>

    <script>
      // Initialize global variables only once
      if (typeof window.imageViewerGlobals === 'undefined') {
        window.imageViewerGlobals = {
          currentZoom: 1,
          minZoom: 0.5,
          maxZoom: 3,
          zoomStep: 0.25,
          galleryImages: [],
          currentImageIndex: 0
        };
      }

      window.openImageViewer = function(imageSrc, imageAlt, isGalleryMode = false) {
        const modal = document.getElementById('imageViewerModal');
        const modalImg = document.getElementById('imageViewerImage');
        const caption = document.getElementById('imageViewerCaption');
        const contentContainer = document.querySelector('.image-viewer-content');

        modal.style.display = 'block';
        modalImg.src = imageSrc;
        modalImg.alt = imageAlt;

        // Reset zoom and container
        window.imageViewerGlobals.currentZoom = 1;
        modalImg.style.transform = 'scale(1)';
        modalImg.style.cursor = 'zoom-in';
        contentContainer.style.width = '';
        contentContainer.style.height = '';
        contentContainer.style.overflow = 'visible';

        // Split text into lines and format with appropriate classes
        const lines = imageAlt.split('\n');
        if (lines.length > 1) {
          const firstLine = `<span class="caption-first-line">${lines[0]}</span>`;
          const middleLines = lines.slice(1, -1).map(line => `<span class="caption-middle-line">${line}</span>`).join('<br>');
          const lastLine = `<span class="caption-last-line">${lines[lines.length - 1]}</span>`;
          const parts = [firstLine, middleLines, lastLine].filter(p => p && !p.includes('undefined'));
          caption.innerHTML = parts.join('<br>');
        } else {
          caption.innerHTML = `<span class="caption-first-line">${imageAlt}</span>`;
        }

        // Only hide gallery navigation and reset state if not in gallery mode
        if (!isGalleryMode) {
          document.getElementById('galleryNavPrev').style.display = 'none';
          document.getElementById('galleryNavNext').style.display = 'none';
          window.imageViewerGlobals.galleryImages = [];
          window.imageViewerGlobals.currentImageIndex = 0;
        }

        // Prevent body scroll when modal is open
        document.body.style.overflow = 'hidden';
      }

      window.openImageGallery = function(galleryData) {
        // Validate gallery data
        if (!galleryData || !galleryData.images || galleryData.images.length === 0) {
          console.error('Invalid gallery data:', galleryData);
          return;
        }

        window.imageViewerGlobals.galleryImages = galleryData.images;

        // Ensure currentIndex is within bounds
        let currentIndex = galleryData.currentIndex || 0;
        if (currentIndex < 0 || currentIndex >= galleryData.images.length) {
          console.warn('Invalid image index', currentIndex, 'resetting to 0');
          currentIndex = 0;
        }
        window.imageViewerGlobals.currentImageIndex = currentIndex;

        // Update URL with image index and site_id if available
        if (window.urlState) {
          const hasSiteModal = !!document.getElementById('site-modal');
          const currentImage = window.imageViewerGlobals.galleryImages[currentIndex];

          if (currentImage && currentImage.site_id) {
            // Image has a site_id - include it in URL
            window.urlState.set('site', currentImage.site_id);
          } else if (!hasSiteModal) {
            // No site_id and no modal - remove site parameter
            window.urlState.remove('site');
          }

          window.urlState.set('image', currentIndex);
        }

        // Open with the selected image (in gallery mode)
        const currentImage = window.imageViewerGlobals.galleryImages[window.imageViewerGlobals.currentImageIndex];
        if (!currentImage || !currentImage.src) {
          console.error('Invalid current image:', currentImage);
          return;
        }

        window.openImageViewer(currentImage.src, currentImage.alt, true);

        // Show navigation arrows if there are multiple images
        if (window.imageViewerGlobals.galleryImages.length > 1) {
          window.updateGalleryNavigation();
        }
      }

      window.navigateGallery = function(direction) {
        if (window.imageViewerGlobals.galleryImages.length <= 1) return;

        window.imageViewerGlobals.currentImageIndex += direction;

        // Wrap around at boundaries
        if (window.imageViewerGlobals.currentImageIndex >= window.imageViewerGlobals.galleryImages.length) {
          window.imageViewerGlobals.currentImageIndex = 0;
        } else if (window.imageViewerGlobals.currentImageIndex < 0) {
          window.imageViewerGlobals.currentImageIndex = window.imageViewerGlobals.galleryImages.length - 1;
        }

        // Update URL with new image index and site_id if available
        if (window.urlState) {
          const hasSiteModal = !!document.getElementById('site-modal');
          const currentImage = window.imageViewerGlobals.galleryImages[window.imageViewerGlobals.currentImageIndex];

          if (currentImage && currentImage.site_id) {
            // Image has a site_id - include it in URL
            window.urlState.set('site', currentImage.site_id);
          } else if (!hasSiteModal) {
            // No site_id and no modal - remove site parameter
            window.urlState.remove('site');
          }

          window.urlState.set('image', window.imageViewerGlobals.currentImageIndex);
        }

        // Update the displayed image
        const currentImage = window.imageViewerGlobals.galleryImages[window.imageViewerGlobals.currentImageIndex];
        const modalImg = document.getElementById('imageViewerImage');
        const caption = document.getElementById('imageViewerCaption');

        modalImg.src = currentImage.src;
        modalImg.alt = currentImage.alt;

        // Reset zoom when navigating
        window.imageViewerGlobals.currentZoom = 1;
        modalImg.style.transform = 'scale(1)';
        modalImg.style.cursor = 'zoom-in';

        // Update caption with appropriate classes
        const lines = currentImage.alt.split('\n');
        if (lines.length > 1) {
          const firstLine = `<span class="caption-first-line">${lines[0]}</span>`;
          const middleLines = lines.slice(1, -1).map(line => `<span class="caption-middle-line">${line}</span>`).join('<br>');
          const lastLine = `<span class="caption-last-line">${lines[lines.length - 1]}</span>`;
          const parts = [firstLine, middleLines, lastLine].filter(p => p && !p.includes('undefined'));
          caption.innerHTML = parts.join('<br>');
        } else {
          caption.innerHTML = `<span class="caption-first-line">${currentImage.alt}</span>`;
        }

        window.updateGalleryNavigation();
      }

      window.updateGalleryNavigation = function() {
        const prevBtn = document.getElementById('galleryNavPrev');
        const nextBtn = document.getElementById('galleryNavNext');

        if (window.imageViewerGlobals.galleryImages.length > 1) {
          prevBtn.style.display = 'block';
          nextBtn.style.display = 'block';

          // Update button states (you could add disabled states if desired)
          prevBtn.style.opacity = window.imageViewerGlobals.currentImageIndex === 0 ? '0.5' : '1';
          nextBtn.style.opacity = window.imageViewerGlobals.currentImageIndex === window.imageViewerGlobals.galleryImages.length - 1 ? '0.5' : '1';
        } else {
          prevBtn.style.display = 'none';
          nextBtn.style.display = 'none';
        }
      }

      window.zoomImage = function(direction) {
        const modalImg = document.getElementById('imageViewerImage');
        const contentContainer = document.querySelector('.image-viewer-content');

        if (direction === 'in' && window.imageViewerGlobals.currentZoom < window.imageViewerGlobals.maxZoom) {
          window.imageViewerGlobals.currentZoom += window.imageViewerGlobals.zoomStep;
        } else if (direction === 'out' && window.imageViewerGlobals.currentZoom > window.imageViewerGlobals.minZoom) {
          window.imageViewerGlobals.currentZoom -= window.imageViewerGlobals.zoomStep;
        }

        modalImg.style.transform = `scale(${window.imageViewerGlobals.currentZoom})`;
        modalImg.style.cursor = window.imageViewerGlobals.currentZoom > 1 ? 'zoom-out' : 'zoom-in';

        // Adjust container size based on zoom level
        const baseWidth = modalImg.naturalWidth || modalImg.offsetWidth;
        const baseHeight = modalImg.naturalHeight || modalImg.offsetHeight;

        if (window.imageViewerGlobals.currentZoom > 1) {
          // Expand container when zoomed in
          const scaledWidth = Math.min(baseWidth * window.imageViewerGlobals.currentZoom, window.innerWidth * 0.95);
          const scaledHeight = Math.min(baseHeight * window.imageViewerGlobals.currentZoom, window.innerHeight * 0.85);

          contentContainer.style.width = `${scaledWidth}px`;
          contentContainer.style.height = `${scaledHeight}px`;
          contentContainer.style.overflow = 'auto';
        } else {
          // Reset container when zoomed out
          contentContainer.style.width = '';
          contentContainer.style.height = '';
          contentContainer.style.overflow = 'visible';
        }

        // Prevent event bubbling to avoid closing modal
        event.stopPropagation();
      }

      window.closeImageViewer = function() {
        const modal = document.getElementById('imageViewerModal');
        modal.style.display = 'none';

        // Remove image parameter from URL
        if (window.urlState) {
          window.urlState.remove('image');
        }

        // Restore body scroll
        document.body.style.overflow = 'auto';
      }

      // Keyboard navigation
      document.addEventListener('keydown', function(e) {
        if (document.getElementById('imageViewerModal').style.display === 'block') {
          if (e.key === 'Escape') {
            window.closeImageViewer();
          } else if (e.key === 'ArrowLeft') {
            window.navigateGallery(-1);
          } else if (e.key === 'ArrowRight') {
            window.navigateGallery(1);
          }
        }
      });

      // Check URL on page load and open gallery if image parameter exists
      document.addEventListener('DOMContentLoaded', function() {
        if (window.urlState && window.urlState.get('image')) {
          const imageIndex = parseInt(window.urlState.get('image'), 10);
          const siteParam = window.urlState.get('site');

          // Function to try opening gallery
          const tryOpenGallery = function() {
            // If there's a site modal open, look for gallery within the modal
            const siteModal = document.getElementById('site-modal');
            let galleryElement;

            if (siteModal && siteModal.style.display === 'block') {
              // Look for gallery within the modal
              galleryElement = siteModal.querySelector('[data-gallery-data]');
            } else {
              // No modal, look for first gallery on page
              galleryElement = document.querySelector('[data-gallery-data]');
            }

            if (galleryElement) {
              const galleryData = JSON.parse(galleryElement.getAttribute('data-gallery-data'));
              // Update the current index to the one from URL
              galleryData.currentIndex = imageIndex;
              window.openImageGallery(galleryData);
            }
          };

          // If there's also a site parameter AND a site modal exists, wait for the modal to load
          const hasSiteModal = !!document.getElementById('site-modal');
          if (window.urlState.get('site') && hasSiteModal) {
            // Wait for modal content to load (it's loaded via fetch in showSiteModal)
            // We'll try multiple times with increasing delays
            let attempts = 0;
            const maxAttempts = 10;
            const checkInterval = setInterval(function() {
              attempts++;
              const siteModal = document.getElementById('site-modal');
              const galleryExists = siteModal && siteModal.querySelector('[data-gallery-data]');
              if (galleryExists || attempts >= maxAttempts) {
                clearInterval(checkInterval);
                if (galleryExists) {
                  tryOpenGallery();
                } else {
                  // Modal didn't load, try page gallery as fallback
                  const pageGallery = document.querySelector('[data-gallery-data]');
                  if (pageGallery) {
                    const galleryData = JSON.parse(pageGallery.getAttribute('data-gallery-data'));
                    galleryData.currentIndex = imageIndex;
                    window.openImageGallery(galleryData);
                  }
                }
              }
            }, 200);
          } else {
            // No site parameter or no modal element, gallery should be immediately available
            tryOpenGallery();
          }
        }
      });

      // Handle browser back/forward for gallery
      window.addEventListener('urlStateChanged', function() {
        const imageIndex = window.urlState.get('image');
        const galleryModal = document.getElementById('imageViewerModal');

        if (imageIndex !== null) {
          // URL has image parameter - ensure gallery is open at that index
          if (galleryModal.style.display !== 'block') {
            // Gallery not open - find and open it
            // Check if site modal is open to find the right gallery
            const siteModal = document.getElementById('site-modal');
            let galleryElement;

            if (siteModal && siteModal.style.display === 'block') {
              galleryElement = siteModal.querySelector('[data-gallery-data]');
            } else {
              galleryElement = document.querySelector('[data-gallery-data]');
            }

            if (galleryElement) {
              const galleryData = JSON.parse(galleryElement.getAttribute('data-gallery-data'));
              galleryData.currentIndex = parseInt(imageIndex, 10);
              window.openImageGallery(galleryData);
            }
          } else if (window.imageViewerGlobals.currentImageIndex !== parseInt(imageIndex, 10)) {
            // Gallery is open but at wrong index - navigate to correct image
            const targetIndex = parseInt(imageIndex, 10);
            const diff = targetIndex - window.imageViewerGlobals.currentImageIndex;
            window.navigateGallery(diff);
          }
        } else if (galleryModal.style.display === 'block') {
          // No image parameter but gallery is open - close it
          window.closeImageViewer();
        }
      });
    </script>
  </body>
</html>
