<div class="site-modal-detail" data-controller="gallery">
  <div class="modal-site-header">
    <div class="modal-site-header-left">
      <h2><%= site.historic_name %></h2>
      <% if site.images.any? %>
        <p class="modal-site-photo-count"><%= pluralize(site.images.count, 'photo') %></p>
      <% end %>
      <% if site.architectural_style.present? %>
        <p class="modal-site-style">
          <%= site.architectural_style %><% if site.architect.present? %> by architect <%= site.architect %><% end %>
        </p>
      <% end %>
    </div>
    <div class="modal-site-header-details">
      <p class="modal-site-address"><%= site.address %></p>
      <% if site.built_year %>
        <p class="modal-site-year">Built: <%= site.built_year %></p>
      <% end %>
    </div>
  </div>

  <div class="modal-site-content">
    <!-- Full-width image gallery -->
    <% if site.images.any? %>
      <div class="image-gallery">
        <% site.images.each_with_index do |image, index| %>
          <a href="#" onclick="openImageGallery(<%= {
            images: site.images.map.with_index { |img, i| { 
              src: url_for(img), 
              alt: "Historic home, the \"#{site.historic_name}\" - Photo #{i + 1} of #{site.images.count}" 
            } },
            currentIndex: index
          }.to_json.html_safe %>); return false;" class="gallery-image-link">
            <%= image_tag(image, alt: "Historic home, the \"#{site.historic_name}\" - Photo #{index + 1} of #{site.images.count}", class: "gallery-image") %>
          </a>
        <% end %>
      </div>
    <% else %>
      <div class="modal-image-gallery">
        <div class="modal-gallery-item featured">
          <%= image_tag("no-image-placeholder.png", alt: "No image available", class: "modal-gallery-image") %>
        </div>
      </div>
    <% end %>
    
    <!-- Description section -->
    <div class="modal-site-description">
      <h4>Description</h4>
      <div class="description-content">
        <% if site.description.present? %>
          <%= simple_format(site.description, class: "description-paragraph") %>
        <% else %>
          <p class="description-paragraph"><em>No description available.</em></p>
        <% end %>
      </div>
    </div>
    
    <!-- Property details section -->
    <div class="modal-site-details">
      <div class="modal-detail-grid">
        <% if site.original_owner.present? %>
          <div class="modal-detail-item">
            <span class="modal-detail-label">Original Owner</span>
            <span class="modal-detail-value"><%= site.original_owner %></span>
          </div>
        <% end %>

        <% if site.current_owner.present? %>
          <div class="modal-detail-item">
            <span class="modal-detail-label">Current Owner</span>
            <span class="modal-detail-value"><%= site.current_owner %></span>
          </div>
        <% end %>

        <% if site.architect.present? %>
          <div class="modal-detail-item">
            <span class="modal-detail-label">Architect</span>
            <span class="modal-detail-value"><%= site.architect %></span>
          </div>
        <% end %>


        <% if site.survey_year.present? %>
          <div class="modal-detail-item">
            <span class="modal-detail-label">Survey Year</span>
            <span class="modal-detail-value"><%= site.survey_year %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>