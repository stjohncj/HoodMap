<div class="page-header">
  <div class="container">
    <nav class="breadcrumb">
      <%= link_to "Historic District Map", historic_district_map_path, class: "nav-link" %> 
      <span>/</span>
      <span><%= @site.historic_name %></span>
    </nav>
  </div>
</div>

<%= render @site %>

<div class="container">
  <div class="navigation-footer">
    <%= link_to historic_district_map_path, class: "btn btn-secondary" do %>
      <i class="fas fa-arrow-left"></i> Back to Map
    <% end %>
  </div>
</div>

<style>
.breadcrumb {
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.9);
}

.breadcrumb .nav-link {
  color: white;
  text-decoration: underline;
}

.breadcrumb span {
  margin: 0 0.5rem;
}

.navigation-footer {
  text-align: center;
  padding: 2rem 0;
  margin-top: 2rem;
  border-top: 1px solid #e5e7eb;
}

.btn i {
  margin-right: 0.5rem;
