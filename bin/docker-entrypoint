#!/bin/bash -e

# Debug: Show environment variables
echo "DEBUG: Environment variables starting with RAILS, SECRET, or DATABASE:"
env | grep -E '^(RAILS|SECRET|DATABASE)' || echo "None found"

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  if [ -n "${DATABASE_URL}" ]; then
    echo "Database URL found, running db:prepare"
    ./bin/rails db:prepare
  else
    echo "WARNING: DATABASE_URL not set, skipping database setup"
    echo "The app will fail if it tries to access the database"
  fi
fi

exec "${@}"
